<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".SignUpActivity" >

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/background_image_description"
        android:scaleType="centerCrop"
        android:src="@drawable/house" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <com.postpc.homeseek.widget.CustomTitleTextView
            android:id="@+id/client_owner_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/signup"
            android:textColor="@color/dark_blue_txt"
            android:textSize="30sp" />

        <com.postpc.homeseek.widget.CustomButton
            android:id="@+id/sign_up_btn"
            android:layout_width="136dp"
            android:layout_height="48dp"
            android:layout_alignRight="@+id/sign_up_info_layout"
            android:layout_below="@+id/sign_up_info_layout"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_button_sign_up"
            android:onClick="onSignUpConfirmClick"
            android:text="@string/sign_up_confirm_btn_txt"
            android:textColor="@color/light_blue_txt"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/sign_up_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/client_owner_header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_sign_up"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <com.postpc.homeseek.widget.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first_name_txt"
                    android:textColor="@color/light_blue_txt" />

                <EditText
                    android:id="@+id/first_name_edt"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/background_sign_up_field2"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" />

                <com.postpc.homeseek.widget.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/last_name_txt"
                    android:textColor="@color/light_blue_txt" />

                <EditText
                    android:id="@+id/last_name_edt"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/background_sign_up_field2"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" />

                <com.postpc.homeseek.widget.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/email"
                    android:textColor="@color/light_blue_txt" />

                <EditText
                    android:id="@+id/email_edt"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/background_sign_up_field2"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" />

                <com.postpc.homeseek.widget.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/password"
                    android:textColor="@color/light_blue_txt" />

                <EditText
                    android:id="@+id/password_edt"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/background_sign_up_field2"
                    android:inputType="textPassword"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" />

                <com.postpc.homeseek.widget.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/confirm_password"
                    android:textColor="@color/light_blue_txt" />

                <EditText
                    android:id="@+id/password_confirm_edt"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/background_sign_up_field2"
                    android:inputType="textPassword"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>