<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ApartmentPhotosActivity" >

    <!-- Top Ruler -->

    <LinearLayout
        android:id="@+id/background_image_top_ruler"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@drawable/top_ruler_heigt22"
        android:orientation="horizontal"
        android:scaleType="centerCrop" >

        <ImageButton
            android:id="@+id/top_ruler_add_photo_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/top_ruler_heigt22"
            android:contentDescription="@string/background_image_top_ruler_description"
            android:onClick="onAddPhotoClick"
            android:padding="2dip"
            android:scaleType="centerInside"
            android:src="@drawable/top_ruler_add_photo_icon" />

        <ImageView
            android:id="@+id/separetor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/background_image_top_ruler_description"
            android:src="@drawable/top_ruler_seperator" />

        <ImageButton
            android:id="@+id/top_ruler_share_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/top_ruler_heigt22"
            android:contentDescription="@string/background_image_top_ruler_description"
            android:onClick="onSharePhotoClick"
            android:padding="2dip"
            android:scaleType="centerInside"
            android:src="@drawable/top_ruler_share_icon" />

        <ImageView
            android:id="@+id/separetor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/background_image_top_ruler_description"
            android:src="@drawable/top_ruler_seperator" />

        <ImageButton
            android:id="@+id/top_ruler_back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/top_ruler_heigt22"
            android:contentDescription="@string/background_image_top_ruler_description"
            android:onClick="onBackBtnClick"
            android:padding="2dip"
            android:scaleType="centerInside"
            android:src="@drawable/top_ruler_back_icon" />
    </LinearLayout>

    <!-- Top Ruler End -->

    <LinearLayout
        android:id="@+id/photo_gallery_container"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="horizontal" />

</LinearLayout>