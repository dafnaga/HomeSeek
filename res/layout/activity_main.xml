        <com.postpc.homeseek.widget.CustomButton
            android:id="@+id/signup_btn"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/login_btn"
            android:layout_below="@+id/logo_header"
            android:layout_marginTop="28dp"
            android:background="@drawable/custom_button_sign_up"
            android:onClick="onSignUpBtnClick"
            android:text="@string/sign_up_btn_txt"
            android:textColor="@color/light_blue_txt"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/logo_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/signup_btn"
            android:layout_alignParentTop="true"
            android:layout_marginTop="22dp"
            android:contentDescription="@string/background_image_description"
            android:src="@drawable/homeseek_logo" />

        <com.postpc.homeseek.widget.CustomButton
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/signup_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"
            android:background="@drawable/custom_button_login"
            android:onClick="onLoginBtnClick"
            android:text="@string/login_btn_txt"
            android:textColor="@color/light_blue_txt"
            android:textSize="25sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/background_image_description"
        android:scaleType="centerCrop"
        android:src="@drawable/house" />

</RelativeLayout>