<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_owner_info"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_blue"
    tools:context=".OwnerApartmentInfoActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ProgressBar
                android:id="@+id/apartment_photo_img_progress_bar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/apartment_photo_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/apartment_photos"
                android:onClick="onShowPhotosClick"
                android:src="@drawable/add_photo_icon_big" />
        </RelativeLayout>

        <com.postpc.homeseek.widget.CustomTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:text="@string/touch_to_see_add_photos_str"
            android:textColor="@color/dark_blue_txt" />
        <!-- Apartment Headline -->

        <com.postpc.homeseek.widget.CustomTextView
            android:id="@+id/apartment_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/dark_blue_txt"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- Apartment Headline End -->


        <!-- Info -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_login"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="6dp" >

            <com.postpc.homeseek.widget.CustomTextView
                android:id="@+id/owner_info_apartment_city_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/city_txt"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <com.postpc.homeseek.widget.CustomTextView
                android:id="@+id/apartment_city_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_login"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="6dp" >

            <com.postpc.homeseek.widget.CustomTextView
                android:id="@+id/owner_info_apartment_street_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/street_txt"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <com.postpc.homeseek.widget.CustomTextView
                android:id="@+id/apartment_street_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_login"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="6dp" >

            <com.postpc.homeseek.widget.CustomTextView
                android:id="@+id/owner_info_apartment_neighborhood_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/neighborhood_txt"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <com.postpc.homeseek.widget.CustomTextView
                android:id="@+id/apartment_neighborhood_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_login"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="6dp" >

            <com.postpc.homeseek.widget.CustomTextView
                android:id="@+id/owner_info_apartment_building_number_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/building_num_txt"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <com.postpc.homeseek.widget.CustomTextView
                android:id="@+id/apartment_building_number_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_login"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="6dp" >

            <com.postpc.homeseek.widget.CustomTextView
                android:id="@+id/owner_info_apartment_ap_number_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apartment_num_txt"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <com.postpc.homeseek.widget.CustomTextView
                android:id="@+id/apartment_ap_number_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_login"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="6dp" >

            <com.postpc.homeseek.widget.CustomTextView
                android:id="@+id/owner_info_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price_txt"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <com.postpc.homeseek.widget.CustomTextView
                android:id="@+id/apartment_price_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_login"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="6dp" >

            <com.postpc.homeseek.widget.CustomTextView
                android:id="@+id/owner_info_area_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/area_txt"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <com.postpc.homeseek.widget.CustomTextView
                android:id="@+id/apartment_area_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_login"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="6dp" >

            <com.postpc.homeseek.widget.CustomTextView
                android:id="@+id/owner_info_rooms_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rooms_num_txt"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <com.postpc.homeseek.widget.CustomTextView
                android:id="@+id/apartment_rooms_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_login"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="6dp" >

            <com.postpc.homeseek.widget.CustomTextView
                android:id="@+id/owner_info_comments_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comments_txt"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <com.postpc.homeseek.widget.CustomTextView
                android:id="@+id/apartment_owner_comments_txt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:maxLines="5" />
        </LinearLayout>

        <!-- <Button -->
        <!-- android:id="@+id/add_photo_btn" -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:onClick="onAddPhotoClick" -->
        <!-- android:text="@string/add_photo" /> -->


        <!-- <Button -->
        <!-- android:id="@+id/show_photos_btn" -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:onClick="onShowPhotosClick" -->
        <!-- android:text="@string/show_photos" /> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <com.postpc.homeseek.widget.CustomButton
                android:id="@+id/clients_list_btn"
                style="@style/btn_info_view_clients_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="-8sp"
                android:onClick="onClientsListClick"
                android:paddingTop="8sp"
                android:text="@string/view_clients_list"
                android:textColor="@color/light_blue_txt"
                android:textSize="10sp" />

            <com.postpc.homeseek.widget.CustomButton
                android:id="@+id/apartment_calendar_btn"
                style="@style/btn_info_calendar_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="-8sp"
                android:onClick="onCalendarClick"
                android:paddingTop="8sp"
                android:text="@string/set_visiting_hours_str"
                android:textColor="@color/light_blue_txt"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <com.postpc.homeseek.widget.CustomButton
                android:id="@+id/edit_apartment_btn"
                style="@style/btn_info_edit_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="-8sp"
                android:onClick="onEditClick"
                android:paddingTop="8sp"
                android:text="@string/edit_apartment"
                android:textColor="@color/light_blue_txt"
                android:textSize="10sp" />

            <com.postpc.homeseek.widget.CustomButton
                android:id="@+id/remove_apartment_btn"
                style="@style/btn_info_delete_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="-8sp"
                android:onClick="onRemoveClick"
                android:paddingTop="8sp"
                android:text="@string/apartment_remove"
                android:textColor="@color/light_blue_txt"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>