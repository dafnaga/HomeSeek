<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="NoTitleDialog" parent="android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <!-- item name="android:background">@color/light_blue</item -->
    </style>

    <style name="btn_info_background" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/light_blue_txt</item>
        <item name="android:textSize">10sp</item>
        <item name="android:height">44dip</item>
        <item name="android:background">@drawable/custom_button_info_background</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="btn_info_fav_icon" parent="btn_info_background">
        <item name="android:drawableTop">@drawable/custom_button_icon_fav</item>
        <item name="android:paddingTop">8sp</item>
    </style>

    <style name="btn_info_navigate_icon" parent="btn_info_background">
        <item name="android:drawableTop">@drawable/custom_button_icon_navigate</item>
        <item name="android:paddingTop">8sp</item>
    </style>

    <style name="btn_info_calendar_icon" parent="btn_info_background">
        <item name="android:drawableTop">@drawable/custom_button_icon_calendar</item>
        <item name="android:paddingTop">8sp</item>
    </style>

    <style name="btn_info_chat_icon" parent="btn_info_background">
        <item name="android:drawableTop">@drawable/custom_button_icon_chat</item>
        <item name="android:paddingTop">8sp</item>
    </style>

    <style name="btn_info_remove_icon" parent="btn_info_background">
        <item name="android:drawableTop">@drawable/custom_button_icon_remove</item>
        <item name="android:paddingTop">8sp</item>
    </style>

    <style name="btn_info_share_icon" parent="btn_info_background">
        <item name="android:drawableTop">@drawable/custom_button_icon_share</item>
        <item name="android:paddingTop">8sp</item>
    </style>

    <style name="btn_info_edit_icon" parent="btn_info_background">
        <item name="android:drawableTop">@drawable/custom_button_icon_edit</item>
        <item name="android:paddingTop">8sp</item>
    </style>

     <style name="btn_info_delete_icon" parent="btn_info_background">
        <item name="android:drawableTop">@drawable/custom_button_icon_delete</item>
        <item name="android:paddingTop">8sp</item>
